<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">

        <shape android:dither="true"
            android:shape="rectangle"
            android:useLevel="false"
            android:visible="true">

            <gradient android:angle="270"
                android:endColor="@color/dark_blue"
                android:startColor="@color/dark_blue" />

            <corners android:radius="50dp" />
            <size android:width="30dp"
                android:height="20dp" />
            <stroke android:width="2dp" android:color="@color/dark_blue" />

        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:dither="true"
            android:shape="rectangle"
            android:useLevel="false"
            android:visible="true">

            <gradient android:angle="270"
                android:endColor="@color/view_divider_color"
                android:startColor="@color/view_divider_color" />

            <corners android:radius="50dp" />
            <size android:width="30dp" android:height="20dp" />
            <stroke android:width="2dp"
                android:color="@color/view_divider_color" />
        </shape>
    </item>
</selector>



