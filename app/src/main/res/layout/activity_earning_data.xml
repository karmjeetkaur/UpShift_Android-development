<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="com.upshft.upshiftapp.signup.ChooseVehicle">

    <LinearLayout
        android:id="@+id/header_layout"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_revenue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue"
            android:padding="10dp"
            android:background="#405266"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/txt_expenses"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expenses"
            android:gravity="center"
            android:padding="10dp"
            android:background="#ffffff"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/header_layout"
        android:layout_width="match_parent"
        android:background="@color/view_divider_color"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_send"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/txt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ui_button_blue"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:text="Send"
        android:textColor="#fff"
        android:textSize="15sp" />


</RelativeLayout>
