<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="0dp"
    android:background="@color/dark_blue"
    android:minHeight="60dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:src="@drawable/settings_cog_icon" />

    <ToggleButton
        android:id="@+id/togglewidgetSwitch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:background="@drawable/widget_toggle_button"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:id="@+id/close_widgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_close_widget"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/open_widgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_open_widget"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>