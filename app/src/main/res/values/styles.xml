<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--This is a style for TRANSPARENT button with white boarder and text-->
    <style name="ui_button_trans" parent="AppTheme">
        <item name="android:textColor">#CCDD33</item>
        <item name="android:background">@drawable/ui_button_trans</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:height">30dp</item>
    </style>

    <!--This is a style for WHITE button with no boarder and blue text -->
    <style name="ui_button_white" parent="AppTheme">
        <item name="android:textColor">#407bdb</item>
        <item name="android:background">@drawable/ui_button_white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--This is a style for BLUE button with no boarder and blue text -->
    <style name="ui_button_blue" parent="AppTheme">
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/ui_button_blue</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

   <!-- EditTextInputLayout-->

