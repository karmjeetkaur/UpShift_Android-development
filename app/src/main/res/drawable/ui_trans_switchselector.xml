<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">

        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="#002eb82e" android:startColor="#002eb82e" />
            <corners android:radius="13dp" />
            <size android:width="40dp" android:height="26dp" />
            <stroke android:width="2dp" android:color="#ffffff" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="#00e60000" android:startColor="#00e60000" />
            <corners android:radius="15dp" />
            <size android:width="40dp" android:height="30dp" />
            <stroke android:width="2dp" android:color="#ffffff" />
        </shape>
    </item>
</selector>



