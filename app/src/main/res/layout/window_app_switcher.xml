<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#006c6c6c"
        android:orientation="vertical"
        android:padding="2dp"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal"
        android:baselineAligned="false"
        android:id="@+id/iconLayout">

        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menuButton"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/menu_icon"
                android:padding="0dp"
                android:background="#00ffffff"
            android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitStart" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uberPartnerButton"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/ub_partner"
            android:background="#00ffffff"
            android:layout_marginBottom="2dp"
            android:scaleType="fitStart" />

        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uberButton"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/ub_rider"
                android:padding="0dp"
            android:background="#00ffffff"
            android:scaleType="fitStart" />

        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyftButton"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/lyft"
                android:background="#00ffffff"
                android:padding="0dp"
            android:scaleType="fitStart" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wazeButton"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/waze"
            android:background="#00ffffff"
            android:padding="0dp"
            android:scaleType="fitStart" />

        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/spotifyButton"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/spotify"
                android:background="#00ffffff"
                android:padding="0dp"
            android:layout_marginBottom="0dp"
            android:scaleType="fitStart" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/squareButton"
            android:layout_gravity="top|center"
            android:src="@drawable/square"
            android:background="#00ffffff"
            android:layout_marginBottom="0dp"
            android:scaleType="fitStart" />

        <ToggleButton
            android:id="@+id/deadhead_widget"
            android:background="@drawable/deadhead_widget_toggle"
            android:textOn=""
            android:textOff=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitStart"
            android:layout_gravity="center"
            android:gravity="center" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="top|center_horizontal"
            android:adjustViewBounds="false"
            android:src="@drawable/move_icon"
            android:padding="0dp"
            android:scaleType="fitStart" />

    </LinearLayout>

</merge>